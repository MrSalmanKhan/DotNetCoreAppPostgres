@{
    ViewData["Title"] = "Access Denied";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow border-0 rounded-3" style="max-width: 680px;">
        <div class="card-body text-center p-5">
            <h1 class="text-danger">Access Denied</h1>
            <p class="lead">You don't have permission to view this page.</p>

            @if (User?.Identity?.IsAuthenticated == true)
            {
                <p>Signed in as <strong>@(User.FindFirst("name")?.Value ?? User.Identity.Name)</strong></p>
            }
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Go to Home</a>
        </div>
    </div>
</div>
