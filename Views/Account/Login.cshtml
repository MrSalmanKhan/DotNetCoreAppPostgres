@{
    ViewData["Title"] = "Login";
    var returnUrl = (string?)ViewData["ReturnUrl"] ?? "/";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="width: 24rem;">
        <div class="card-body text-center p-4">
            <h3 class="mb-1">Welcome</h3>
            <p class="text-muted mb-3">Sign in to continue</p>

            <a asp-controller="Account" asp-action="ExternalLogin"
               asp-route-provider="Google" asp-route-returnUrl="@returnUrl"
               class="btn btn-outline-dark w-100 rounded-pill d-flex align-items-center justify-content-center">
                <img src="https://developers.google.com/identity/images/g-logo.png"
                     alt="Google logo" width="20" class="me-2" />
                Continue with Google
            </a>

            <div class="mt-3 text-muted small">
                Signed in with Google only — we never see your password.
            </div>
        </div>
    </div>
</div>
