@{
    ViewData["Title"] = "Profile";
    var picture = User.Claims.FirstOrDefault(c => c.Type == "picture")?.Value;
    var email = User.Claims.FirstOrDefault(c => c.Type == "email")?.Value;
    var name = User.Identity?.Name;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3 overflow-hidden" style="max-width: 500px; margin: auto;">
        <div class="bg-primary text-white p-4 d-flex flex-column align-items-center">
            @if (!string.IsNullOrEmpty(picture))
            {
                <img src="@picture" alt="Profile Picture"
                     class="rounded-circle border border-3 border-white shadow-sm mb-3"
                     style="width:120px;height:120px;object-fit:cover;" />
            }
            <h4 class="mb-0">@name</h4>
            <small class="text-white-50">@email</small>
        </div>

        <div class="card-body text-center">
            <p class="text-muted">
                Welcome to your profile page.
            </p>
        </div>
    </div>
</div>
